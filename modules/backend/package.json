{
  "name": "@meditation-timer/backend",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "start": "node src/main.js",
    "dev": "pnpm run dev:db:start && pnpm run dev:api:start",
    "dev:api:start": "nodemon -r dotenv/config src/main.ts dotenv_config_path=.env.dev --watch src",
    "dev:api:start:nowatch": "node -r dotenv/config src/main.ts dotenv_config_path=.env.dev",
    "dev:api:stop": "npx kill-port 8000",
    "dev:db:start": "docker-compose -p db-dev --env-file .env.dev -f database/docker-compose.yml up -d",
    "dev:db:stop": "docker-compose -p db-dev --env-file .env.dev -f database/docker-compose.yml down -v",
    "test:watch": "export $(cat .env.test | xargs) && pnpx vitest",
    "test": "export $(cat .env.test | xargs) && pnpx vitest run"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.1",
    "@types/uuid": "^10.0.0",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.1",
    "nodemon": "^3.1.10",
    "pg-mem": "^3.0.5",
    "pg-promise": "^11.15.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@meditation-timer/domain": "workspace:^",
    "@meditation-timer/frontend": "workspace:^",
    "@softersoftware/functions": "workspace:^",
    "argon2": "^0.43.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "form-data": "^4.0.4",
    "jsonwebtoken": "^9.0.2",
    "mailgun.js": "^12.0.3",
    "node-fetch": "^3.3.2",
    "pino": "^9.8.0",
    "postgres": "^3.4.7",
    "uuid": "^11.1.0"
  }
}
