// tsconfig de base pour tous les modules
{
  "compilerOptions": {
    "target": "ES2022",
  "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true
  }
}
