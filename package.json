{
  "name": "meditation-timer",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "build": "pnpm build:root && pnpm build:frontend",
    "build:root": "pnpm install",
    "build:frontend": "pnpm --filter @meditation-timer/frontend build",
    "start": "pnpm start:backend",
    "start:backend": "pnpm --filter @meditation-timer/backend start",
    "dev": "pnpm run dev:backend & pnpm run dev:frontend",
    "dev:backend": "pnpm --filter @meditation-timer/backend dev",
    "dev:frontend": "pnpm --filter @meditation-timer/frontend dev",
    "test:domain": "pnpm --filter @meditation-timer/domain test",
    "test:frontend": "pnpm --filter @meditation-timer/frontend test",
    "test:backend": "pnpm --filter @meditation-timer/backend test",
    "test:libraries": "pnpm test:libraries:functions && pnpm test:libraries:state-manager",
    "test:libraries:functions": "pnpm --filter @softer-software/functions test",
    "test:libraries:state-manager": "pnpm --filter @softer-software/state-manager test",
    "test": "pnpm test:libraries && pnpm test:domain && pnpm test:backend && pnpm test:frontend",
    "format": "prettier -w .",
    "format-check": "prettier --check ."
  },
  "packageManager": "pnpm@10.15.1",
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.4.2"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
