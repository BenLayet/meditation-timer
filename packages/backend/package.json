{
  "name": "backend",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "start": "node src/main.js",
    "dev": "pnpm run dev:db:start && pnpm run dev:api:start",
    "dev:api:start": "nodemon -r dotenv/config src/main.js dotenv_config_path=.env.dev --watch src",
    "dev:api:stop": "npx kill-port 8000",
    "dev:db:start": "docker-compose -p db-dev --env-file .env.dev -f database/docker-compose.yml up -d",
    "dev:db:stop": "docker-compose -p db-dev --env-file .env.dev -f database/docker-compose.yml down -v",
    "test:integration": "vitest --config vitest.integration.config.js"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "nodemon": "^3.1.9",
    "pg-mem": "^3.0.5",
    "pg-promise": "^11.13.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "domain": "workspace:*",
    "express": "^4.21.2",
    "form-data": "^4.0.2",
    "frontend": "workspace:*",
    "jsonwebtoken": "^9.0.2",
    "mailgun.js": "^12.0.1",
    "node-fetch": "^3.3.2",
    "pino": "^9.6.0",
    "postgres": "^3.4.5",
    "uuid": "^11.0.5"
  }
}
