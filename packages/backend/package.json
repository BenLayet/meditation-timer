{
  "name": "backend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev:start": "pnpm run dev:start:database && pnpm run dev:start:app &",
    "dev:stop": "pnpm run dev:stop:database && pnpm run dev:stop:app",
    "dev:start:app": "cross-env NODE_ENV=dev nodemon src/app.js --ignore test",
    "dev:stop:app": "kill $(lsof -t -i:8000)",
    "dev:start:database": "cd env/dev/database && docker-compose up -d && cd ../../..",
    "dev:stop:database": "cd env/dev/database && docker-compose down -v && cd ../../..",
    "test:integration": "vitest --config vitest.config.js",
    "test:integration:ci": "pnpm run dev:start && pnpm run test:integration && pnpm run dev:stop"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "vitest": "^3.0.7"
  },
  "dependencies": {
    "@jest/globals": "^29.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "domain": "workspace:*",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "frontend": "workspace:*",
    "node-fetch": "^3.3.2",
    "postgres": "^3.4.5",
    "uuid": "^11.0.5"
  }
}
